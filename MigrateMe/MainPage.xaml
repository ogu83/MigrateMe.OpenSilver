<UserControl x:Class="MigrateMe.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="clr-namespace:MigrateMe.Controls;assembly=MigrateMe.Controls"
    mc:Ignorable="d"
    d:DesignHeight="600" d:DesignWidth="800">
    <Border x:Name="LayoutRoot" Background="Black">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Migrate Me Silverlight To OpenSilver" Margin="0,0,0,100" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" FontSize="24" />
            <controls:SpecialClock />
            <controls:SpecialLogin Width="500" Height="150"></controls:SpecialLogin>
        </StackPanel>
    </Border>
</UserControl>
